@page "/City"
@using Model
@using Interfaces
@inject ICityService CityService
@attribute [Authorize]

<div class="container-fluid">
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-10">
                    <div class="alert alert-dark" style="width:100%" role="banner"><h3>Ciudades</h3></div>
                </div>
                <div class="col-2">
                    <div class="btn btn-outline-danger">
                        <a href="/DetalleCity"><i>Agregar</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <p>@Messsage</p>

    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row">
                @if (cities == null)
                {
                    <div class="alert alert-warning" role="alert"><p><em>Cargando datos...</em></p></div>
                }
                else
                {
                    <SfGrid DataSource="@cities" AllowPaging="true" AllowSorting="true" AllowFiltering="true">
                        <GridPageSettings PageSize="20"></GridPageSettings>
                        <GridColumns>
                            <GridColumn Field=@nameof(City.id_ciudad) HeaderText="ID" TextAlign="TextAlign.Center" Width="30"></GridColumn>
                            <GridColumn Field=@nameof(City.id_pais) HeaderText="Pais" Width="80"></GridColumn>
                            <GridColumn Field=@nameof(City.ciudad) HeaderText="Ciudad" Width="150"></GridColumn>
                        </GridColumns>
                    </SfGrid>
                }

            </div>
        </div>

    </div>
</div>


@code
{
    public IEnumerable<City> cities { get; set; }
    public string Messsage { get; set; }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            cities = await CityService.GetAllCities();
        }
        catch (Exception ex)
        {
            Messsage = "Error al obtener ciudades: " + ex.Message;
        }
    }
}
