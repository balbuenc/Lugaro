    <SfDialog Width="510px" IsModal="true" @bind-Visible="@IsCancelInvoiceVisible">
        <DialogEvents OnOverlayClick="@OnOverlayclick">
        </DialogEvents>
        <DialogTemplates>
            <Content>
                <div class="row">
                    <div class="col-12">
                        <h5>Anular factura.</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <SfTextBox Placeholder="Motivo" FloatLabelType="@FloatLabelType.Auto" @bind-Value="@MotivoAnulacion"></SfTextBox>
                    </div>
                </div>

            </Content>
        </DialogTemplates>
        <DialogButtons>
            <DialogButton Content="OK" IsPrimary="true" OnClick="@CancelInvoice" />
            <DialogButton Content="Cancel" IsPrimary="true" OnClick="@OnOverlayclick" />
        </DialogButtons>
    </SfDialog>


    <SfDialog Width="1024px" Height="660px" IsModal="true" @bind-Visible="@IsSearchVisible" ShowCloseIcon="true">
        <DialogEvents OnOverlayClick="@OnOverlayclick">
        </DialogEvents>

        <DialogTemplates>
            <Header>
                <h1><b>Buscador de productos y servicios.</b></h1>
            </Header>
            <Content>
                <ItemSearchComponent @ref="@itemSearch"></ItemSearchComponent>
            </Content>
            <FooterTemplate>
                <SfButton CssClass="e-success e-flat" @onclick="@OnItemAdded">
                    <span class="e-btn-icon e-icons e-ok-icon e-icon-left"></span>
                    Agregar
                </SfButton>
                <SfButton CssClass="e-flat" @onclick="@OnOverlayclick">
                    <span class="e-btn-icon e-icons e-close-icon e-icon-left"></span>
                    Cancelar
                </SfButton>
            </FooterTemplate>
        </DialogTemplates>

    </SfDialog>

    <SfDialog Width="400px" Height="200px" IsModal="true" @bind-Visible="@IsMessageVisible" ShowCloseIcon="true">
        <DialogEvents OnOverlayClick="@OnOverlayclick">
        </DialogEvents>

        <DialogTemplates>
            <Header>
                <h1><b>Mensaje del sistema.</b></h1>
            </Header>
            <Content>
                <div class="col-12">
                    <b>@Message</b>
                </div>
            </Content>

        </DialogTemplates>

    </SfDialog>


    <SfToast @ref="ToastObjError" Title="Error!" Content="El presupuesto posee items sin Stock!. No es posible facturarlo." CssClass="@ToastCssClass">
        <ToastPosition X="Right" Y="Bottom"></ToastPosition>
    </SfToast>
</div>


@code {

    [Parameter]
    public string BudgetID { get; set; }

    [Parameter]
    public bool IsPrintable { get; set; } = false;

    public bool IsSearchVisible { get; set; } = false;
    public bool IsMessageVisible { get; set; } = false;
    public bool IsRepositionVisible { get; set; } = false;
    public bool IsCancelInvoiceVisible { get; set; } = false;

    SfToast ToastObjError;

    private string ToastCssClass = "";

    public bool isChecked = true;

    public string Message { get; set; }
    public string[] ToolbarItems = new string[] { "Search" };
    public int PageSize = 100;
    public string format;

    private SystemTools erpTools;
    private String mainURL;
    private String mainLogo;
    private string imagePath;
    private bool facturarSinStock = true;

    public string ErrorDetails = "";
    public string Titulo = "";
    public string Cliente = "";
    public string Fecha = "";
    public DateTime FechaFactura;
    public string NroPresupuesto = "";
    public string Moneda = "";
    public string Cotizacion = "";
    public string Estado = "";
    public string Vendedor = "";
    public string Condicion = "";
    public string Exento = "";
    public string Motivo = "";
    public string EstadoFacturacion = "";
    public string MotivoAnulacion = "";

    public IEnumerable<BudgetDetails> GridData { get; set; }


    public IEnumerable<Discount> discounts { get; set; }
    public List<DiscountLimit> discountLimits = new List<DiscountLimit>();

    public Budget header { get; set; }
    public Stamp stamp { get; set; }

    SfGrid<BudgetDetails> Grid { get; set; }
    SfGrid<DiscountLimit> GridDiscounts { get; set; }

    ItemSearchComponent itemSearch { get; set; } = new ItemSearchComponent();
    CompactItemSearchComponent compactItemSearch { get; set; } = new CompactItemSearchComponent();

    private bool IsVisible { get; set; } = false;

    private GridEditSettings gridEditSettings = new GridEditSettings();
    private bool addProductBtnDisabled = false;



    //Authorization UserPermissions
    AuthorizationMatrix UserPermissions = new AuthorizationMatrix();

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private async Task AuthorizeUser(AuthorizationMatrix m)
    {
        var user = (await authenticationStateTask).User;

        if (!user.Identity.IsAuthenticated)
        {
            m.CanView = false;
            m.CanViewOnlyOwned = true;
            m.CanEdit = false;
            m.CanCreate = false;
            m.CanDelete = false;
        }

        if (user.IsInRole("Administrators"))
