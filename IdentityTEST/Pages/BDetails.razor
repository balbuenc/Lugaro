            Sale s;
            s = await SaleService.GetSaleDetailsByInvoice(header.nro_presupuesto);

            s.estado = "ANULADO";
            s.motivo_anulacion = MotivoAnulacion;

            await SaleService.UpdateSale(s);

            //Elimino las cuotas de la venta
            await QuotaService.DeleteQuotaBySaleId(s.id_venta);

        }
        catch (Exception e)
        {
            Message = "Error al ANULAR factura Nro.: " + NroPresupuesto + ", " + e.Message;
            IsMessageVisible = true;
            return;
        }

        //Modifico el estado del prespuesto
        try
        {
            //registro el estado del presupuesto como Aprobado y Quito el Nro de Factura
            header.estado = "APROBADO";
            header.nro_presupuesto = "";
            await BudgetService.SaveBudget(header);
        }
        catch (Exception e)
        {
            Message = "Error al modificar Presupueto: " + NroPresupuesto + ", " + e.Message;
            IsMessageVisible = true;
            return;
        }

        //Revierto el Stock a su estado original en el caso quee sea necesario
        try
        {
            await ReverseStock();
        }
        catch (Exception e)
        {
            IsCancelInvoiceVisible = false;
            Message = "Error al revertir Stock por ANULACION.: Se ANULÓ la factura, Se generaron errores en la reversión de los productos.  " + NroPresupuesto + ", \n" + e.Message;
            IsMessageVisible = true;
            return;
        }

        Navigate();
    }

