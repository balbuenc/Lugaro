    protected async Task ModifyStock()
    {
        Stock s;
        for (int i = 0; i < GridData.Count(); i++)
        {
            try
            {
                BudgetDetails item = GridData.ElementAt(i);
                s = await StockService.GetStockDetails(item.id_producto);

                if (s.id_stock == 0)
                {
                    continue;
                }

                s.cantidad = s.cantidad - item.cantidad;

                await StockService.SaveStock(s);
            }
            catch (Exception ex)
            {
                continue;
            }

        }
    }


    //Funcion que revierte Stock de los productos en el caso de una devoluion o Anulacion de factura
    protected async Task ReverseStock()
    {
        Stock s;
        try
        {
            for (int i = 0; i < GridData.Count(); i++)
            {
                BudgetDetails item = GridData.ElementAt(i);
                s = await StockService.GetStockDetails(item.id_producto);

                s.cantidad = s.cantidad + item.cantidad;
                await StockService.SaveStock(s);
            }
        }
        catch (Exception ex)
        {
            throw ex;
        }

        try
        {
            //Seteo los dias de devolucion en CERO
            if (Estado == "PRESTAMO")
            {
                header.dias_devolucion = 0;
                header.estado = "DEVUELTO";
                await BudgetService.SaveBudget(header);
            }
        }
        catch (Exception ex)
        {
            throw ex;
        }



        IsRepositionVisible = true;
    }


