

<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Light"
     @bind-Visible="siderVisible">
    <BarBrand>
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="IconName.Home" />
                Home
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Cloud" />
                        Administración
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Area">Areas</BarDropdownItem>
                        <BarDropdownItem To="/Position">Cargos</BarDropdownItem>
                        <BarDropdownItem To="/City">Ciudades</BarDropdownItem>
                        <BarDropdownItem To="/Neighborhood">Barrios</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.ShoppingBag" />
                        Compras
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>Orden de compra</BarDropdownItem>
                        <BarDropdownItem>Stock</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.MoneyBillAlt" />
                        Ventas
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>Presupestos</BarDropdownItem>
                        <BarDropdownItem>Generar venta</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.UserTie"> </BarIcon>
                        Clientes
                    </BarDropdownToggle>
                    <BarDropdownMenu>

                        <BarDropdownItem To="/Cliente/">Cientes</BarDropdownItem>
                        <BarDropdownItem To="/DetalleCliente">Nuevo cliente</BarDropdownItem>

                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("fa-power-off")" ></BarIcon>
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="Identity/Account/Login">LogIn</BarDropdownItem>
                        <BarDropdownItem To="Identity/Account/LogOut">LogOut</BarDropdownItem>
                    </BarDropdownMenu>
                    
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>


@code {
    private bool siderVisible = true;

    void ToggleSidebar()
    {
        siderVisible = !siderVisible;
        StateHasChanged();
    }

    

}

