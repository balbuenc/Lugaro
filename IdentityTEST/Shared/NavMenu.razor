

<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Light"
     @bind-Visible="siderVisible">
    <BarBrand>
        <BarItem>
            <BarLink To="/">
                <BarIcon IconName="IconName.Home" />
                Home
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Suitcase" />
                        RRHH
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Area">Areas</BarDropdownItem>
                        <BarDropdownItem To="/Position">Cargos</BarDropdownItem>
                        <BarDropdownItem To="/CivilStatus">Estados civiles</BarDropdownItem>
                    </BarDropdownMenu>

                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.LocationArrow" />
                        Localización
                    </BarDropdownToggle>
                    <BarDropdownMenu>

                        <BarDropdownItem To="/Country">Paises</BarDropdownItem>
                        <BarDropdownItem To="/City">Ciudades</BarDropdownItem>
                        <BarDropdownItem To="/Neighborhood">Barrios</BarDropdownItem>
                        <BarDropdownItem To="/Nationality">Nacionalidades</BarDropdownItem>

                    </BarDropdownMenu>

                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.List" />
                        Productos
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/Product">Items</BarDropdownItem>
                        <BarDropdownItem>Marcas</BarDropdownItem>
                        <BarDropdownItem>Origenes</BarDropdownItem>
                        <BarDropdownItem>Proveedores</BarDropdownItem>
                        <BarDropdownItem>Stock</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.ShoppingBag" />
                        Compras
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>Orden de compra</BarDropdownItem>
                        
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.MoneyBillAlt" />
                        Ventas
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem>Presupestos</BarDropdownItem>
                        <BarDropdownItem>Generar venta</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>

            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.UserTie"> </BarIcon>
                        Clientes
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="/ClientType/">Tipos de cliente</BarDropdownItem>
                        <BarDropdownItem To="/Cliente/">Cientes</BarDropdownItem>


                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="@("fa-power-off")"></BarIcon>
                    </BarDropdownToggle>
                    <BarDropdownMenu>
                        <BarDropdownItem To="Identity/Account/Login">LogIn</BarDropdownItem>
                        <BarDropdownItem To="Identity/Account/LogOut">LogOut</BarDropdownItem>
                    </BarDropdownMenu>

                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>


@code {
    private bool siderVisible = true;

    void ToggleSidebar()
    {
        siderVisible = !siderVisible;
        StateHasChanged();
    }



}

